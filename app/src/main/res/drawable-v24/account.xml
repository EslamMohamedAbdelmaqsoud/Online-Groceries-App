<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="27dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pictureeslam"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/acc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="20dp"
                        android:hint="Ali Elmansoury"
                        android:textColorHint="#181725"
                        android:textColor="#181725"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/edit"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="16dp"
                    android:hint="nectar@gmail.com"
                    android:textColorHint="#7C7C7C"
                    android:textColor="#7C7C7C"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/orders_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Orders"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_details_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="My Details"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/delivery_address"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Delivery Address"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/payment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Payment Methods"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/promo_card_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Promo Codes"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bell_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Notifications"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/help_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="Help"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/about_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#181725"
                    android:text="About"
                    android:fontFamily="@font/gilroy_semibold"
                    android:textSize="18dp"
                    android:translationX="40dp"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:src="@drawable/right_arrow"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_bar">

        <Button
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#F2F3F2"
            android:drawableLeft="@drawable/log_out"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:paddingStart="20dp"
            android:drawablePadding="-40dp"
            android:text="Log Out"
            android:textColor="#53B175"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bar_design">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/shop_bar" />

            <ImageView
                android:id="@+id/explore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/explore_bar" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/cart_bar" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/favorite_bar" />

            <ImageView
                android:id="@+id/account"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/account_bar_colored" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
