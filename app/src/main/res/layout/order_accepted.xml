<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/oa_bg">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/order_accepted" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order has been\naccepted"
        android:gravity="center"
        android:textColor="#181725"
        android:fontFamily="@font/gilroy_semibold"
        android:textSize="28dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/h2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Your items has been placed and is on it's way to being processed"
        android:fontFamily="@font/gilroy_medium"
        android:textSize="16dp" />

    <Button
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/track_order"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="#53B175"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Track Order"
        android:fontFamily="@font/gilroy_semibold"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/back_to_home"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:textSize="18dp"
        android:textColor="#181725"
        android:fontFamily="@font/gilroy_semibold"/>

</LinearLayout>